{% extends 'base.html.twig' %}

{% block title %}QCM List{% endblock %}

{% block body %}
    <h1>QCM List</h1>
    <table>
        <thead>
            <tr>
                <th>QCM Name</th>
                <th>Course Name</th>
                <th>Actions</th> <!-- Nouvelle colonne pour les actions -->
                <!-- Ajoutez d'autres en-têtes de colonnes si nécessaire -->
            </tr>
        </thead>
        <tbody>
            {% for qcm in qcms %}
                <tr>
                    <td>{{ qcm.title }}</td>
                    <td>{{ qcm.course.name }}</td>
                    <td>
     
                        <a href="{{ path('qcm_show', {'idA': admin_id,'idC':qcm.course.id, 'id': qcm.id}) }}">Show</a>
                    </td>
                    <!-- Ajoutez d'autres cellules de données pour d'autres détails du QCM et du cours si nécessaire -->
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('qcm_create', {'idA': admin_id}) }}">Create New QCM</a>
{% endblock %}
