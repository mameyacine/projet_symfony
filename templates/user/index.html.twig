 {% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>Manage Users</h1>

    <table class="table">
        <thead>
            <tr>

                <th>Username</th>
                <th>Email</th>
                <th>Firstname</th>
                <th>Lastname</th>


                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>

                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>

      
                <td>
                    <a href="{{ path('show_user', {'idA': admin_id,'id': user.id}) }}">show</a>
                    <a href="{{ path('edit_user', {'idA': admin_id, 'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('new_user', {'idA': admin_id}) }}">Create new</a>
{% endblock %}

