{% extends 'base.html.twig' %}

{% block title %}Course index{% endblock %}

{% block body %}
    <h1>Course index</h1>

    <table class="table">
        <thead>
            <tr>

                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for course in courses %}
            <tr>

                <td>{{ course.name }}</td>
                
                <td>
                    <a href="{{ path('show_course' , {'idA': admin_id, 'id': course.id}) }}">show</a>
                    <a href="{{ path('edit_course' , {'idA': admin_id, 'id': course.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('new_course', {'idA': admin_id}) }}">Create new</a>
{% endblock %}
